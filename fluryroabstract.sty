\RequirePackage{geometry}
\geometry{a4paper, left=10mm, right=10mm, top=20mm, bottom=20mm} 

\setlength{\parindent}{0pt}

\newenvironment{fshaded}{
\def\FrameCommand{\fcolorbox{framecolor}{shadecolor}}
\MakeFramed {\FrameRestore}}
{\endMakeFramed}

% Neue Umgebungen

% Definitionen
\newenvironment{fdef}[1][]{\definecolor{shadecolor}{rgb}{1,.92,.92}
    \definecolor{framecolor}{rgb}{1,0,0}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-1.5mm}}{\end{fshaded}}

% Unwichtigerere Definition
\newenvironment{fsubdef}[1][]{\definecolor{shadecolor}{rgb}{1,1,1}
    \definecolor{framecolor}{rgb}{1,0,0}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-1.5mm}}{\end{fshaded}}

% mathematische Sätze
\newenvironment{fsatz}[1][]{\definecolor{shadecolor}{rgb}{1,1,.8}
    \definecolor{framecolor}{rgb}{1,.9,0}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-2mm}}{\end{fshaded}}
    
% Regeln (möglichst nicht zusammen in einem Dokument mit Datenstruktur)
\newenvironment{fregeln}[1][]{\definecolor{shadecolor}{rgb}{.9,1,.9}
    \definecolor{framecolor}{rgb}{0,1,0}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-2mm}}{\end{fshaded}}
    
% VI
\newenvironment{fwichtig}[1][]{\definecolor{shadecolor}{rgb}{.96,.96,1}
    \definecolor{framecolor}{rgb}{0,0,1}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-2mm}}{\end{fshaded}}

% Beispiel
\newenvironment{fbsp}[1][]{\definecolor{shadecolor}{rgb}{1,1,1}
    \definecolor{framecolor}{rgb}{0,1,0}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-2mm}}{\end{fshaded}}

% Datenstruktur (möglichst nicht zusammen in einem Dokument mit Regel)
\newenvironment{fds}[1][]{\definecolor{shadecolor}{rgb}{.9,1,.9}
    \definecolor{framecolor}{rgb}{0,1,0}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-2mm}}{\end{fshaded}}

% Eigenschaften (z.B. von definierten Strukturen)
\newenvironment{feig}[1][]{\definecolor{shadecolor}{rgb}{1,1,1}
    \definecolor{framecolor}{rgb}{0.996,.65,0}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-2mm}}{\end{fshaded}}
    
% Merksätze
\newenvironment{fmerke}[1][]{\definecolor{shadecolor}{rgb}{1,1,1}
    \definecolor{framecolor}{rgb}{0,0,1}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-2mm}}{\end{fshaded}}
    
% Algorithmen
\newenvironment{falgo}[1][]{\definecolor{shadecolor}{rgb}{1,.9,1}
    \definecolor{framecolor}{rgb}{1,0,1}
    \begin{fshaded}\vspace{-5mm}\subsubsection*{#1}\vspace{-1.2mm}}{\end{fshaded}}

